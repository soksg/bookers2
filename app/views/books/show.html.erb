<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>
          <div class="row">
            <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          <h2>New book</h2>
          <%= form_with model: @book, url: books_path, method: :post do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <p><%= f.text_field :title %></p>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <p><%= f.text_area :body %></p>
            </div>
            <div class="form-group btn btn-success">
              <%= f.submit " Create Book ", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
              <table class="table table-hover table-inverse">
                <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <td><%= image_tag @user.get_profile_image(100,100) %>
                    <br><%= link_to user_path(@user.id) %>
                      <%= @user.name %>>
                    </td>
                    <td><%= link_to book_path(@book.id) %>
                      <%= book.title %>
                      </td>
                    <td><%= book.body %></td>
                    <td><%= link_to "Edit",  edit_book_path(@user_id), class: "btn btn-success" %></td>
                    <td><%= link_to "Destroy", books_path,  class: "btn btn-success"%></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
          </div>
    </div>
  </div>