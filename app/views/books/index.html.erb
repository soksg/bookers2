<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
        <!--ここからhome,users,books共通のレイアウト-->
        <div class="col-md-3">
          <h2>User info</h2>
          <!--プロフィール画像-->
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%# ユーザーネーム %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%# 自己紹介文 %></th>
                </tr>
              </tbody>
            </table>
          <div class="row">
            <a class="btn btn-outline-secondary btn-block" href="<%# ユーザー設定へのパス%>">
              <i class="fas fa-user-cog"></i>
            </a>
          </div>
          <h2>New book</h2>
          <%= form_with model: @book do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body %>
            </div>
            <div class="form-group btn btn-success">
              <%= f.submit " Create Book ", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
        <!--ここまでhome,users,books共通のレイアウト-->
          <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <td><%= book.image %></td>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
          </div>
    </div>
  </div>