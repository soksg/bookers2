<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
        <!--ここからhome,users,books共通のレイアウト-->
        <div class="col-md-3">
          <h2>User info</h2>
          <!--プロフィール画像-->
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%# @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%# @user. %></th>
                </tr>
              </tbody>
            </table>
          <div class="row">
            <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
            <!--<a class="" href="edit_user_path(:id)">-->
              <i class="fas fa-user-cog"></i>
            <% end %>
            <!--</a>-->
          </div>
          <h2>New book</h2>
          <%= form_with model: @book, url: books_path, method: :post do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <p><%= f.text_field :title %></p>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <p><%= f.text_area :body %></p>
            </div>
            <div class="form-group btn btn-success">
              <%= f.submit " Create Book ", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
        <!--ここまでhome,users,books共通のレイアウト-->
          <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <td><%= image_tag 'sample-author1.jpg' %></td>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
          </div>
    </div>
  </div>